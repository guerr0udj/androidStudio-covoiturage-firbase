<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home"

    android:fillViewport="true"
    >
    <LinearLayout
        android:id="@+id/home_root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Logout"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/nom_profile_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="nom"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/prenom_profile_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="prénom"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/numero_profile_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="+33"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/heure_depart_profile_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="heure départ"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/heure_arrivee_profile_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="heure arrivee"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/point_depart_profile_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="point_depart"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/point_arrivee_profile_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="point d'arrivee"
            android:textSize="20sp"/>





        <Button
            android:id="@+id/save_data_profile_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="save"
            android:layout_gravity="center"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_users_list_profile_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="users List"
            android:layout_gravity="center"
            android:textSize="20sp"/>


        <Button
            android:id="@+id/btn_test_profile_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="test debug"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="80dp"/>


    </LinearLayout>




</ScrollView>