<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SubscribFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:cardCornerRadius="50dp"
                android:layout_margin="20dp"
                >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:layout_gravity="top"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text= "Subscription"
                        android:textColor="@color/vista_blue"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        />


                    <EditText
                        android:id="@+id/prenom_subscribe_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="  first name"
                        android:textSize="25sp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/roundcorner_white_text_holder"
                        />

                    <EditText
                        android:id="@+id/nom_subscribe_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="  last name"
                        android:textSize="25sp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/roundcorner_white_text_holder"
                        />

                    <EditText
                        android:id="@+id/numtel_subscribe_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="  Phone number"
                        android:textSize="25sp"
                        android:layout_marginBottom="15dp"
                        android:inputType="number"
                        android:background="@drawable/roundcorner_white_text_holder"
                        />

                    <EditText
                        android:id="@+id/mail_subscribe_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="  mail"
                        android:textSize="25sp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/roundcorner_white_text_holder"
                        />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp">



                        <EditText
                            android:id="@+id/password_subs_fragment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="  password"
                            android:textSize="25sp"
                            android:inputType="textPassword"
                            android:background="@drawable/roundcorner_white_text_holder"
                            />

                        <ImageView
                            android:id="@+id/eye_subscribe_fragment"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/baseline_eye_gray_24"
                            android:layout_gravity="right|center_vertical"
                            android:elevation="10dp"
                            />

                    </FrameLayout>







                </LinearLayout>

                <Button
                    android:id="@+id/btn_subscribe_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sign up"
                    android:textSize="20sp"
                    android:layout_gravity="bottom"
                    />

            </androidx.cardview.widget.CardView>



        <LinearLayout
            android:id="@+id/checkboxes_layout_subs_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <CheckBox
                android:id="@+id/checkbox_min8char_subscribe_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* At least 8 characters long"
                android:enabled="false"
                />


            <CheckBox
                android:id="@+id/checkbox_onedigit_subscribe_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* one digit"
                android:enabled="false"
                />

            <CheckBox
                android:id="@+id/checkbox_lowercase_subscribe_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* Contains at least one lowercase letter (a-z)"
                android:enabled="false"
                />

            <CheckBox
                android:id="@+id/checkbox_uppercase_subscribe_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* one uppercase letter (A-Z)"
                android:enabled="false"
                />

            <CheckBox
                android:id="@+id/checkbox_specialchar_subscribe_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* one special character from the following: @#$%^+="
                android:enabled="false" />

            <CheckBox
                android:id="@+id/checkbox_whitespace_subscribe_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* Does not contain any whitespace characters "
                android:enabled="false"
                />

        </LinearLayout>




        </LinearLayout>
    </ScrollView>

</FrameLayout>